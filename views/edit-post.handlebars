<article>
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <label class="input-group-text" for="post-title">Title</label>
            <input class="form-control" type="text" name="post-title" value="{{post.title}}" />
        </div>
        <div>
            <label class="input-group-text" for="post-body">Blog Post Text</label>
            <textarea name="post-body" cols="30" rows="10" id="post-body">{{post.post_body}}</textarea>
        </div>
        <div>
            By you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}}{{format_plural " comment" post.comments.length}}</a>
        </div>
        <button class="btn btn-primary" type="submit"><i class="fas fa-save"></i> Save post</button>
        <button class="btn btn-primary" type="button" class="delete-post-btn"><i class="fas fa-trash-alt"></i> Delete Post</button>
    </form>

    <form class="comment-form input-group-text">
        <div>
            <textarea name="comment-body"></textarea>
        </div>

        <div>
            <button type="submit"><i class="fas fa-comments"></i> Add Comment</button>
        </div>
    </form>

    {{> comments post.comments}}

    <script src="/javascript/edit-post.js"></script>
    <script src="/javascript/delete-post.js"></script>
    <script src="/javascript/comment.js"></script>
</article>